<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Equalizer"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColorHighlight="@color/primary"
        android:textColorLink="@color/primary_light"
        android:theme="@style/custom_switch"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/about_equalizer"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/switchMaterial" />


    <TextView
        android:id="@+id/db_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="+12db"
        app:layout_constraintEnd_toStartOf="@+id/db_230"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/db_230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12db"
        app:layout_constraintEnd_toStartOf="@+id/db_910"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/db_60"
        app:layout_constraintTop_toTopOf="@+id/db_60" />

    <TextView
        android:id="@+id/db_910"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12db"
        app:layout_constraintEnd_toStartOf="@+id/db_3600"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/db_230"
        app:layout_constraintTop_toTopOf="@+id/db_230" />

    <TextView
        android:id="@+id/db_3600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12db"
        app:layout_constraintEnd_toStartOf="@+id/db_14000"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/db_910"
        app:layout_constraintTop_toTopOf="@+id/db_910" />

    <TextView
        android:id="@+id/db_14000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+12db"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/db_3600"
        app:layout_constraintTop_toTopOf="@+id/db_3600" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="32dp"
        android:layout_height="@dimen/equalizer_seek_bar_height"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/db_60"
        app:layout_constraintStart_toStartOf="@+id/db_60"
        app:layout_constraintTop_toBottomOf="@+id/db_60">

        <SeekBar
            android:id="@+id/hz_60"
            android:layout_width="@dimen/equalizer_seek_bar_height"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="32dp"
        android:layout_height="@dimen/equalizer_seek_bar_height"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/db_230"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/db_230"
        app:layout_constraintTop_toTopOf="@+id/frameLayout">

        <SeekBar
            android:id="@+id/hz_230"
            android:layout_width="@dimen/equalizer_seek_bar_height"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="32dp"
        android:layout_height="@dimen/equalizer_seek_bar_height"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/db_910"
        app:layout_constraintStart_toStartOf="@+id/db_910"
        app:layout_constraintTop_toTopOf="@+id/frameLayout2">

        <SeekBar
            android:id="@+id/hz_910"
            android:layout_width="@dimen/equalizer_seek_bar_height"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="32dp"
        android:layout_height="@dimen/equalizer_seek_bar_height"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/db_3600"
        app:layout_constraintStart_toStartOf="@+id/db_3600"
        app:layout_constraintTop_toTopOf="@+id/frameLayout4">

        <SeekBar
            android:id="@+id/hz_3600"
            android:layout_width="@dimen/equalizer_seek_bar_height"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="@dimen/equalizer_seek_bar_height"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/db_14000"
        app:layout_constraintStart_toStartOf="@+id/db_14000"
        app:layout_constraintTop_toTopOf="@+id/frameLayout3">

        <SeekBar
            android:id="@+id/hz_14000"
            android:layout_width="@dimen/equalizer_seek_bar_height"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:rotation="270" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>