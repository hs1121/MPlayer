<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">@drawable/background_main</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="popupMenuBackground">@color/grad_medium</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/text_primary</item>

        <!--animations-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/player_expand_trans</item>
        <item name="android:windowExitTransition">@transition/player_expand_trans</item>

        </style>





    <style name="bottom_nav_style" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>


    </style>
    <style name="custom_card" parent="CardView">
        <item name="android:topRightRadius">@dimen/radius_bottom_nav</item>
        <item name="android:topLeftRadius">@dimen/radius_bottom_nav</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
    </style>


    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/abhaya_libre_bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="normal_text" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/abhaya_libre</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="icon_style" parent="">
        <item name="tint">@color/iconColor</item>
    </style>
    
    <style name="custom_checkbox_style" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="custom_input_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/input_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_radius</item>
        <item name="hintTextColor">@color/grad_dark</item>
        <item name="strokeColor">@color/transparent</item>


    </style>

    <style name="custom_button_accept_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grad_medium</item>
        <item name="cornerRadius">@dimen/input_text_radius</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="custom_button_cancel_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grad_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grad_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">@dimen/input_text_radius</item>
    </style>

    <style name="custom_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/iconColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/icon_inactive
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white_40
        </item>
    </style>



    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/grad_medium</item>
    </style>


    <color name="white_80">#CCFFFFFF</color>
</resources>